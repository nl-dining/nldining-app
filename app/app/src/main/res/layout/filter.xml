<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:dividerPadding="8dp"
        android:layout_marginBottom="16dp">

        <!-- Titel -->
        <TextView
            android:id="@+id/filterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter restaurants"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Plaats -->
        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Plaats"
            android:inputType="text"
            android:padding="20dp" />

        <!-- Categorie -->
        <EditText
            android:id="@+id/editTextCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categorie"
            android:inputType="text"
            android:padding="20dp" />

        <!-- Tags -->
        <EditText
            android:id="@+id/editTextTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tags (bijv. vegan, halal)"
            android:inputType="text"
            android:padding="20dp" />

        <!-- Reviewscore - Overall -->
        <EditText
            android:id="@+id/editTextScoreOverall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Min. Score - Totaal"
            android:inputType="numberDecimal"
            android:padding="20dp" />

        <!-- Reviewscore - Eten -->
        <EditText
            android:id="@+id/editTextScoreFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Min. Score - Eten"
            android:inputType="numberDecimal"
            android:padding="20dp" />

        <!-- Reviewscore - Service -->
        <EditText
            android:id="@+id/editTextScoreService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Min. Score - Service"
            android:inputType="numberDecimal"
            android:padding="20dp" />

        <!-- Reviewscore - Ambiance -->
        <EditText
            android:id="@+id/editTextScoreAmbiance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Min. Score - Sfeer"
            android:inputType="numberDecimal"
            android:padding="20dp" />

        <!-- Zoekknop -->
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zoeken"
            android:layout_marginTop="16dp"
            android:padding="20dp" />
    </LinearLayout>
</ScrollView>
